@model Models.State

@{
  var modelId = Html.IdForModel();
  var repeaterRowId = $"{modelId}_repeaterRow";
  var repeaterContentId = $"{modelId}_repeaterContent";
  var stateContentCardHeaderId = $"{modelId}_stateContentCardHeader";
  var stateContentId = $"{modelId}_stateContent";
  var addButtonId = $"{modelId}_addButton";
}

<div id="@repeaterRowId" class="row" data-repeater-row="@modelId">
  @Html.HiddenFor(m => m.StateId)
  <div class="col">
    <div class="card mb-1">
      <div class="card-header alert-primary" id="@stateContentCardHeaderId">
        <a data-toggle="collapse" href="#@stateContentId">
          State: @Model.Name
        </a>
      </div>
      <div id="@stateContentId" class="collapse">
        <div class="card-body">
          <div class="row">
            <div class="col-md-6">
              <div class="form-group row">
                <label asp-for="Name" class="control-label"></label>
                <div class="col">
                  <input asp-for="Name" class="form-control" />
                </div>
                <span asp-validation-for="Name" class="text-danger"></span>
              </div>
            </div>
            <div class="col-md-6">
              <div class="form-group row">
                <label asp-for="IsTerritory" class="control-label"></label>
                <div class="col">
                  <input asp-for="IsTerritory" class="form-control" />
                </div>
                <span asp-validation-for="IsTerritory" class="text-danger"></span>
              </div>
            </div>
          </div>
          <div id="@repeaterContentId">
            @Html.EditorFor(m => m.Locations)
          </div>
          <button id="@addButtonId" type="button" class="repeater-button btn btn-outline-secondary"
                  data-repeater-add-button=""
                  data-repeater-selector="#@repeaterContentId">
            Add Location
          </button>
        </div>
      </div>
    </div>
  </div>
</div>